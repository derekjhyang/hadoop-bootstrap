<?xml version="1.0"?>
<project name="Wordcount 1.0" default="compile">
  <!-- clean -->
  <target name="clean" description="remove intermediate files">
    <delete dir="classes" />
    <delete file="wordcount-1.0.jar" />
  </target>

  <!-- compile -->
  <target name="compile" description="compile the classes" >
    <mkdir dir="classes" />
    <javac srcdir="src" 
           destdir="classes" 
           classpath="/usr/lib/hadoop-0.20/hadoop-core.jar"
     />
  </target>
  
  <!-- jar -->
  <target name="jar" depends="compile" description="create jar file">
    <jar destfile="wordcount-1.0.jar">
      <fileset dir="classes" includes="**/*.class"/>
    </jar>
  </target>
</project>
